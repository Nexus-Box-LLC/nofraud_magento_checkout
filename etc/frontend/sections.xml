<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Customer:etc/sections.xsd">
    <action name="quote_id/action/*">
        <section name="nofrudcheckout"/>
        <section name="is_logged"/>
    </action>
    <action name="checkout/cart/add">
        <section name="nofrudcheckout"/>
    </action>
    <action name="checkout/cart/delete">
        <section name="nofrudcheckout"/>
    </action>
    <action name="checkout/sidebar/removeItem">
        <section name="nofrudcheckout"/>
    </action>
    <action name="checkout/cart/configure">
        <section name="nofrudcheckout"/>
    </action>
    <action name="rest/*/V1/guest-carts/*/shipping-information">
        <section name="nofrudcheckout"/>
    </action>
    <action name="rest/*/V1/carts/*/shipping-information">
        <section name="nofrudcheckout"/>
    </action>
    <action name="rest/*/V1/guest-carts/*/payment-information">
        <section name="nofrudcheckout"/>
    </action>
    <action name="rest/*/V1/carts/*/payment-information">
        <section name="nofrudcheckout"/>
    </action>
</config>